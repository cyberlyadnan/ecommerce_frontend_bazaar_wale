# ============================================
# Firebase Configuration (Google OAuth)
# ============================================
# Get these from Firebase Console → Project Settings → Your apps → Web app config
# All variables MUST start with NEXT_PUBLIC_ to be accessible in the browser

NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890

# ============================================
# API Configuration
# ============================================
# Backend API base URL (without trailing slash)
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000

# ============================================
# Razorpay Configuration (Optional)
# ============================================
NEXT_PUBLIC_RAZORPAY_KEY_ID=your-razorpay-key-id

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
